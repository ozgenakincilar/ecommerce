@using NS.Web.Models.Products
@model AddToCartViewModel

<div class="col-md-12" id="basket"> 
    <div class="box"> 
        <h1>Sepete Ekle</h1> 
        @using (Html.BeginForm("AddToCart", "Products", FormMethod.Post))
        {
            @Html.AntiForgeryToken() 
            <div class="form-group">
                @Html.EditorFor(x => x.Quantity, new { placeholder = "quantity", @class = "form-control" })
            </div> 
            @Html.HiddenFor(x => x.ProductId)  

            <div class="box-footer">
                <div class="pull-left">
                    <input type="submit" class="btn btn-default" value="Add to cart" /> 
                </div> 
            </div>
        }
    </div> 
</div>
